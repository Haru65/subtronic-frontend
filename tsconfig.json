{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["node"],
    "verbatimModuleSyntax": true,
    "importsNotUsedAsValues": "remove",
    "preserveValueImports": false
  },
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
